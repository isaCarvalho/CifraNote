<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <TableRow
        android:id="@+id/rowFontFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fontFamilyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fontFamily"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/rowFontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowFontFamily">

        <TextView
            android:id="@+id/fontSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fontSize"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/fontColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowFontSize">

        <TextView
            android:id="@+id/fontColorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fontColor"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>